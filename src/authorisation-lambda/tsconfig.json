{
	"compilerOptions": {
		/* Docs: https://www.typescriptlang.org/tsconfig */ "target": "ES2020",
		"module": "commonjs",
		"outDir": ".out",
		"rootDir": "./",
		"strict": true,
		"noImplicitAny": true,
		"noEmitOnError": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"types": ["node"],
		"lib": ["es6"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowUnreachableCode": false,
		"useUnknownInCatchVariables": false // TypeScript 4.4+ only!
	},
	"include": ["./**/*.ts", "./**/*.js"],
	"exclude": ["node_modules", "<node_internals>/**", ".out/**/*"]
}
